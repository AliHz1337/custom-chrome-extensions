{
   "manifest_version": 3,
   "name": "JSON Beautifier",
   "version": "1.0.0",
   "description": "Beautiful dark-themed JSON formatter for Chrome",
   "permissions": [
      "storage"
   ],
   "host_permissions": [
      "*://*/*",
      "<all_urls>"
   ],
   "icons": {
      "128": "icons/128.png",
      "32": "icons/32.png"
   },
   "web_accessible_resources": [
      {
         "resources": [
            "content.css"
         ],
         "matches": [
            "<all_urls>"
         ]
      }
   ],
   "content_scripts": [
      {
         "js": [
            "content.js"
         ],
         "matches": [
            "<all_urls>"
         ],
         "run_at": "document_end"
      }
   ]
}